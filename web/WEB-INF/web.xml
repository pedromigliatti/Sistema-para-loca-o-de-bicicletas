    <error-page>
         <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/erros/404.jsp</location>
	</error-page>
        <!-- Forbidden directory listing -->
         <error-page>
        <error-code>403</error-code>
        <location>/erros/403.jsp</location>
	</error-page>
